<!DOCTYPE html>
<html lang="en">
<head>
  <title>Hospital List</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">manboong</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">home</a>
        </li>    
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <h3>병원목록</h3>
  <form action="/" method="get">
    <div class="mb-3 mt-3">
      <select class="form-select form-select-sm mt-3" name="sidoNm" id="sidoNm">
        
        {{#sidoNms}}
        <option>{{.}}</option>
        {{/sidoNms}}

      </select>
    </div> 

    <div class="mb-3">
      <select class="form-select" name="sgguNm" id="sgguNm">

        {{#sgguNms}}
        <option>{{.}}</option>
        {{/sgguNms}}

      </select>
    </div>
    <button type="submit" class="btn btn-primary">병원찾기</button>
  </form>

<hr />

    <table class="table">
      <thead>
        <tr>
          <th>병원 명</th>
          <th>병원 주소</th>
        </tr>
      </thead>
      <tbody id="tbody-hospital">
        {{#hospitals}}
        <tr>
          <td>{{yadmNm}}</td>
          <td>{{addr}}</td>
        </tr>
        {{/hospitals}}
      </tbody>
    </table>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    let setSgguNm = (responsePasing) => {
      let sgguNmDom = document.querySelector("#sgguNm");
      sgguNmDom.innerHTML = '';  // 기존 옵션을 비우고
      console.log(sgguNmDom);
      

      //리턴이 필요없으니 foreach로
      responsePasing.forEach((e)=>{
        //엘리멘트 생성후 넣기
        let optionEL = document.createElement("option");
        optionEL.text = e;
        sgguNmDom.append(optionEL);
      });

      
    }

    let getSgguNm = async (sidoNm) => {
      let response = await fetch(`http://localhost:8000/api/sgguNm?sidoNm=${sidoNm}`);
      let responsePasing = await response.json();
      console.log(responsePasing);
      setSgguNm(responsePasing);
    }

    let sidoNmDom = document.querySelector("#sidoNm");
  
    sidoNmDom.addEventListener("change", (e) => {
      console.log(e.target.value);
      let sidoNm = e.target.value;
      getSgguNm(sidoNm);
    });
  });
</script>
</body>
</html>
